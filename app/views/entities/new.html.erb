<h2 class="text-center white mt-4 mb-4"> New Transaction </h2>
  <div class="container text-center p-2">
    <%= form_for(@entity) do |form| %>
      <%= form.label :name, class:'text-center white w-100 mb-3', style:'font-weight: 600;' %>
      <%= form.text_field :name, class: 'form-control mb-3 text-center', placeholder: 'Name' %>
      <%= form.label :amount, class:'text-center white w-100 mb-3', style:'font-weight: 600;' %>
      <%= form.text_field :amount, class: 'form-control mb-3 text-center', placeholder: 'i.e: 20.57' %>
      <div class="container bottom-container d-flex justify-content-center">
        <%= form.submit 'Save', class: 'btn btn-outline-sucess bottom-link input-buttons', style: 'font-weight: 600;' %>
      </div>
    <% end %>
  </div>