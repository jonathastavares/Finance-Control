<h1 align="center" class="">LOGIN</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class='container text-center border border-primary rounded-pill border-3 w-25 text-center'>
    <div class="form-group">
      <div class="control-label col-sm-2 w-100">
        <%= f.label :username %>
      </div>
      <div class="col-sm-8 w-100 d-flex justify-content-center mt-3 mb-3">
        <%= f.text_field :username, class: "form-control w-75", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>
    <div class="form-group w-100">
      <div class="col-sm-offset-2 col-sm-10 w-100 mb-2">
        <%= f.submit "Log in", class: 'btn btn-primary btn-large w-50' %>
      </div>
    </div>
  </div>
  <div class='col-xs-4 col-xs-offset-2 text-center mt-2'>
    <%= link_to "Don't have an account? Sign Up!", signup_path %>
  </div>
<% end %>
    